@model Search

@{
    ViewData["Title"] = "Arama Sayfası İşlemleri";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/home/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Arama Sayfası</li>
                        <li class="breadcrumb-item active">Düzenle</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Arama Sayfası</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-controller="search" asp-action="manage" method="post">
                        <input class="form-control" asp-for="Id" type="hidden" />
                        <input class="form-control" asp-for="Date" type="hidden" />
                        <input class="form-control" asp-for="Enabled" type="hidden" />
                        <p>Burada eklediğiniz veriler arama kısmında kullanılacaktır. Kullanıcının sayfa içerisinde aradığını rahatlıkla bulması amaçlanmaktadır. Başlık ve açıklamayı sayfanın içeriğini detaylandırın!</p>
                        <div class="form-group">
                            <label>Sayfa Başlığı</label>
                            <input class="form-control" asp-for="Title" required />
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea rows="3" class="form-control" asp-for="Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label>Link</label>
                            <input class="form-control" asp-for="Permalink" required />
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Gönder" class="btn btn-success" />
                            <a asp-action="list" class="btn btn-info">Listeye Dön</a>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
