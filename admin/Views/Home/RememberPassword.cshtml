@model RememberPassword

@{
    ViewData["Title"] = "Şifremi Hatırla";
    Layout = "_LayoutHome";
}


    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Şifreni Sıfırla</p>
            <input type="hidden" name="ReturnUrl" value="@ViewBag.returnUrl" />

            <form asp-controller="home" asp-action="rememberpassword" method="post">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        @Html.Raw(ViewBag.SuccessMessage)
                    </div>
                }
                <div asp-validation-summary="All"></div>
                <div class="input-group mb-3">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Mail">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="PinCode" class="form-control" placeholder="6 Haneli Pin Kodunuz">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-code"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block btn_submit">Bağlantı Gönder</button>
                        <a asp-controller="home" asp-action="index" class=" btn btn-info btn-block">Listeye Dön</a>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>