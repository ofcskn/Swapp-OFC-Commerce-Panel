@model Current

@{
    ViewData["Title"] = "Profil Ayarları";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/home/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Ayarlar</li>
                        <li class="breadcrumb-item active">Profilim</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Profilim</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">

                    <form id="adminForm" asp-controller="setting" asp-action="profilecurrent" class="form-horizontal style-form" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="LastLoginIp" />
                        <input type="hidden" asp-for="Status" />
                        <input type="hidden" asp-for="No" />
                        <input type="hidden" asp-for="Image" />
                        <input type="hidden" asp-for="RegisterDate" />
                        <div asp-validation-summary="All"></div>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger d-block">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <h4 class="form-title">Kişisel Bilgiler</h4>
                        <div class="form-group">
                            <label asp-for="Name" class="col-sm-2 col-sm-2 control-label">Ad</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname" class="col-sm-2 col-sm-2 control-label">Soyad</label>
                            <div class="col-sm-10">
                                <input asp-for="Surname" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail" class="col-sm-2 col-sm-2 control-label">E-Posta</label>
                            <div class="col-sm-10">
                                <input asp-for="Mail" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="City" class="col-sm-2 col-sm-2 control-label">Yaşadığınız Şehir</label>
                            <div class="col-sm-10">
                                <input asp-for="City" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Fotoğraf</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Yükle</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="Image" />
                                    <label class="custom-file-label" name="Image">Dosya Seçin</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group border-dark mt-2 shadow-sm">
                            @if (Model != null)
                            {
                                <img src="/admin/img/current/@Model.Image" alt="" height="400" />
                            }
                        </div>
                        <h4 class="form-title">Kullanıcı Bilgileri</h4>
                        <div class="form-group">
                            <label asp-for="UserName" class="col-sm-2 col-sm-2 control-label">Kullanıcı Adı</label>
                            <div class="col-sm-10">
                                <input asp-for="UserName" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PinCode" class="col-sm-4 col-sm-2 control-label">6 Haneli Pin Kodunuz</label>
                            <div class="col-sm-10">
                                <input asp-for="PinCode" type="number" class="form-control" />
                            </div>
                            <label class="col-sm-auto form-alert-text">Güvenlik gerektiren işlemlerde kullanılacaktır. Lütfen aklınızda tutun.</label>
                            <span asp-validation-for="PinCode"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="col-sm-2 col-sm-2 control-label">Kullanıcı Şifresi</label>
                            <div class="col-sm-10">
                                <input name="Password" value="@Model.Password" type="password" class="form-control" />
                            </div>
                            <label class="col-sm-auto form-alert-text">Sisteme yukarıdaki kullanıcı adı ve şifre ile giriş yapılabilmektedir.</label>
                        </div>
                        <div class="form-group form-button">
                            <button type="button" class="btn btn-primary btn_submit">Gönder</button>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->