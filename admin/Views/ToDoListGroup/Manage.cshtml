@model ToDoListViewModel

@{
    ViewData["Title"] = "Yapılacaklar Listesi Grubu Ekle";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/home/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Yapılacaklar Listesi Grupları</li>
                        <li class="breadcrumb-item active">Düzenle</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Grubu Düzenle</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="manage" method="post" enctype="multipart/form-data">
                        <input class="form-control" asp-for="ToDoListGroup.Id" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.Priority" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.Enabled" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.Date" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.Image" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.Icon" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.AdminId" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.AdminRole" type="hidden" />
                        <input class="form-control" asp-for="ToDoListGroup.GroupId" value="@Model.GroupId" type="hidden" />
                        <div class="form-group">
                            <label>Başlık</label>
                            <input class="form-control" type="text" asp-for="ToDoListGroup.Title" />
                            <span asp-validation-for="ToDoListGroup.Title" />
                        </div>
                        <div class="form-group">
                            <label>Kısa Açıklama</label>
                            <textarea class="form-control" type="text" asp-for="ToDoListGroup.ShortDescription"></textarea>
                            <span asp-validation-for="ToDoListGroup.ShortDescription" />
                        </div>
                        <div class="form-group">
                            <label>Detay Bilgileri</label>
                            <textarea class="textarea" asp-for="ToDoListGroup.Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Yazı Fontu</label>
                            <input type="color" asp-for="ToDoListGroup.TitleColor" />
                        </div>
                        <div class="form-group">
                            <label>Ana Renk</label>
                            <input type="color" asp-for="ToDoListGroup.Color" />
                        </div>
                        <hr />
                        <div class="form-group">
                            <label>Logo</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Logo Yükle</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="Image" accept="image/*" />
                                    <label class="custom-file-label" for="Image">Dosya Seçin</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group border-dark mt-2 shadow-sm">
                            @if (Model.ToDoListGroup.Image != null)
                            {
                                <img class="w-100 cover" src="/admin/img/todolistgroup/@Model.ToDoListGroup.Image" alt="" height="400" />
                            }
                        </div>
                        <div class="form-group">
                            <label>İkon</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">İkon Yükle</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="Icon" accept="image/*" />
                                    <label class="custom-file-label" for="Icon">Dosya Seçin</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group border-dark mt-2 shadow-sm">
                            @if (Model.ToDoListGroup.Icon != null)
                            {
                                <img src="/admin/img/todolistgroup/@Model.ToDoListGroup.Icon.Replace("png", "webp")" alt="" height="50" width="50" />
                            }
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Gönder" class="btn btn-success" />
                            <a asp-controller="todolistgroup" asp-action="list" class="btn btn-info">Listeye Dön</a>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section script{
    <script>
        $(".textarea").summernote();
    </script>
}