@model ToDoListViewModel

@{
    ViewData["Title"] = "Yapılacaklar Listesi Üyeleri";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/home/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Yapılacaklar Listesi Grupları</li>
                        <li class="breadcrumb-item active">Üye İşlemleri</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Grup Üyeleri Düzenle</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="manage" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Yöneticiler</label>
                            <input class="form-control" type="text" asp-for="ToDoListGroup.Title" />
                            <span asp-validation-for="ToDoListGroup.Title" />
                        </div>
                        <div class="form-group">
                            <label>Personeller</label>
                            <input class="form-control" type="text" asp-for="ToDoListGroup.Title" />
                            <span asp-validation-for="ToDoListGroup.Title" />
                        </div>
                        <hr />
                        <div class="form-group mt-2">
                            <input type="submit" value="Gönder" class="btn btn-success" />
                            <a asp-controller="todolistgroup" asp-action="list" class="btn btn-info">Listeye Dön</a>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
