@model Current

@{
    ViewData["Title"] = "Cari İşlemleri";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/home/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Cari</li>
                        <li class="breadcrumb-item active">İşlemler</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    @if (Model.Id != 0)
                    {
                        <h3 class="card-title">Cari Güncelle</h3>
                    }
                    else
                    {
                        <h3 class="card-title">Cari Ekle</h3>
                    }
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger d-block">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    <form asp-controller="current" asp-action="manage" method="post">
                        <input type="hidden" asp-for="Id" class="form-control">
                        <input type="hidden" asp-for="Status" class="form-control">
                        <input type="hidden" asp-for="RegisterDate" class="form-control">
                        <input type="hidden" asp-for="No" class="form-control">
                        <input type="hidden" asp-for="LastLoginDate" class="form-control">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="Name">Ad</label>
                            <input asp-for="Name" class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname">Soyad</label>
                            <input asp-for="Surname" class="form-control">
                            <span class="text-danger" asp-validation-for="Surname"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City">Şehir</label>
                            <input asp-for="City" class="form-control">
                            <span class="text-danger" asp-validation-for="City"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail">Mail</label>
                            <input type="email" asp-for="Mail" class="form-control">
                            <span class="text-danger" asp-validation-for="Mail"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Şifre</label>
                            <input name="Password" value="@Model.Password" type="password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        @if (Model.Id == 0)
                        {
                            <div class="form-group">
                                <label asp-for="PinCode" class="col-sm-4 col-sm-2 control-label">6 Haneli Pin Kodunuz</label>
                                <div class="col-sm-10">
                                    <input asp-for="PinCode" type="number" class="form-control" />
                                </div>
                                <label class="col-sm-auto form-alert-text">Güvenlik gerektiren işlemlerde kullanılacaktır. Lütfen aklınızda tutun.</label>
                                <span asp-validation-for="PinCode"></span>
                            </div>
                        }
                        <button type="button" class="btn btn-primary btn_submit">Gönder</button>
                        <a class="btn btn-info " asp-action="list"><i class="fas fa-reply mr-2"></i>Listeye Dön</a>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->