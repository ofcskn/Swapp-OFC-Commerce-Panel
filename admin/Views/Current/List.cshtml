@model IEnumerable<Current>

@{
    ViewData["Title"] = "Cari Listesi";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/home/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Cari</li>
                        <li class="breadcrumb-item active">Liste</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Cariler</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 1%">
                                        #
                                    </th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Şehir</th>
                                    <th>Mail</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var statusBorder = "border-enabled";
                                    if (item.Status == false)
                                    {
                                        statusBorder = "border-no-enabled";
                                    }
                                    <tr class="@statusBorder">
                                        <td>@item.No</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.City</td>
                                        @if (item.Mail.Contains("cari_"))
                                        {
                                            <td>ÖZEL KULLANICI</td>
                                        }
                                        else
                                        {
                                            <td>@item.Mail</td>
                                        }
                                        <td class="project-actions text-right">
                                            @if (item.Status == true)
                                            {
                                                <a href="#" class="btn btn-warning btn-publish" data-id="@item.Id"><i class="fa text-white fa-stop"></i></a>
                                            }
                                            else
                                            {
                                                <a href="#" class="btn btn-success btn-publish" data-id="@item.Id"><i class="fa text-white fa-play"></i></a>
                                            }
                                            <a class="btn btn-info " asp-action="manage" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                                            <a class="btn btn-danger text-white delete" data-id="@item.Id"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <a class="btn btn-success" asp-action="manage">Cari Ekle</a>
            <!-- /.card -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section script{
    <script>
        $(".delete").on("click", function () {
            var id = $(this).data("id");
            var formData = new FormData();
            formData.append("id", id);

            swal("Müşteriyi veritabanından sileceksiniz. Emin misiniz?", {
                buttons: {
                    cancel: "Geri Dön",
                    delete: {
                        text: "Sil",
                        value: "delete",
                        closeModal: false,
                    },
                },
            })
                .then((value) => {
                    switch (value) {
                        case "delete":
                            $.ajax({
                                url: "/admin/current/delete",
                                method: 'POST',
                                data: formData,
                                dataType: "json",
                                processData: false,
                                contentType: false,
                                success: function (data) {
                                    swal("Heey", "Müşteri silindi.", "success");
                                    setTimeout(
                                        function () {
                                            location.reload();
                                        }, 1500);
                                },
                                error: function () {
                                    swal("Owww!", "Müşteri silinemedi. Lütfen daha sonra tekrar dene.!", "error");
                                    setTimeout(
                                        function () {
                                            location.reload();
                                        }, 1500);
                                }
                            });
                            break;
                        default:
                            swal("Görüşürüz!");
                            setTimeout(
                                function () {
                                    location.reload();
                                }, 1000);
                    }
                });
        });
        $(".btn-publish").on("click", function () {
            var currentId = $(this).data("id");

            swal("Siteyi yayınlayacaksınız. Emin misiniz?", {
                buttons: {
                    cancel: "Geri Dön",
                    catch: {
                        text: "Yayınla",
                        value: "catch",
                        closeModal: false,
                    },
                    pause: {
                        text: "Duraklat",
                        value: "pause",
                        closeModal: false,
                    },
                },
            })
                .then((value) => {
                    switch (value) {
                        case "pause":
                            var formData = new FormData();
                            formData.append("currentId", currentId);
                            formData.append("enabled", false);

                            $.ajax({
                                url: "/admin/current/publishstatus",
                                method: 'POST',
                                data: formData,
                                dataType: "json",
                                processData: false,
                                contentType: false,
                                success: function (data) {
                                    if (data == "no") {
                                        swal("Owww!", "Ürün duraklatılamadı. Lütfen daha sonra tekrar dene.!", "error");
                                        setTimeout(
                                            function () {
                                                location.reload();
                                            }, 1500);
                                    }
                                    else {
                                        swal("Heey", "Ürün duraklatıldı.", "success");
                                        setTimeout(
                                            function () {
                                                location.reload();
                                            }, 1500);
                                    }
                                },
                                error: function () {
                                    swal("Owww!", "Ürün duraklatılamadı. Lütfen daha sonra tekrar dene.!", "error");
                                    setTimeout(
                                        function () {
                                            location.reload();
                                        }, 1500);
                                }
                            });
                            break;

                        case "catch":

                            //Ajax
                            var formData = new FormData();
                            formData.append("currentId", currentId);
                            formData.append("enabled", true);

                            $.ajax({
                                url: "/admin/current/publishstatus",
                                method: 'POST',
                                data: formData,
                                dataType: "json",
                                processData: false,
                                contentType: false,
                                success: function (data) {
                                    if (data == "no") {
                                        swal("Owww!", "Erişim pasifleştirildi. Lütfen daha sonra tekrar dene.!", "error");
                                        setTimeout(
                                            function () {
                                                location.reload();
                                            }, 1500);
                                    }
                                    else {
                                        swal("Harika!", "Erişim aktifleştirildi!", "success");
                                        setTimeout(
                                            function () {
                                                location.reload();
                                            }, 1500);
                                    }
                                },
                                error: function () {
                                    swal("Owww!", "Erişim durumu değiştirilemedi. Lütfen daha sonra tekrar dene.!", "error");
                                    setTimeout(
                                        function () {
                                            location.reload();
                                        }, 1500);
                                }
                            });

                            break;

                        default:
                            swal("Görüşürüz!");
                            setTimeout(
                                function () {
                                    location.reload();
                                }, 1000);
                    }
                });

        });
    </script>
}