@inject IUnitOfWork _uow

@{
    int i = 0;
    int t = 0;
    ViewData["Title"] = "Genel İstatistikler";
    var last7Days = _uow.PageAnalysis.GetDayByLastWeek();
    var visitorDataLast7Days = last7Days;
}

